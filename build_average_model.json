{
    "tool-version": "0.1-beta", 
    "name": "Build_Average_Model", 
    "command-line": "export RUBYLIB=/work/build_average_model;source /opt/minc/1.9.15/minc-toolkit-config.sh;build_average_model.rb NUMBER_OF_ITERATIONS --serial --model MODEL_FILE --model-mask MODEL_MASK_FILE  --list LIST_FILES -o OUTPUT", 
    "inputs": [
        {
            "description": "Number of rounds of iteration performed at each level", 
            "value-key": "NUMBER_OF_ITERATIONS", 
            "type": "String", 
	    "command-line-flag" : "-f",
            "optional": false, 
            "id": "no_of_iterations", 
            "name": "Number of iterations"
        }, 
        {
            "description": "MNI model file (Example: mni_icbm152_t1_tal_nlin_sym_09a.mnc)",  
            "value-key": "MODEL_FILE", 
            "optional": false, 
            "type": "File", 
	    "command-line-flag" : "--model",
            "id": "model_file", 
            "name": "Model file"
        }, 
        {
             "description": "MNI model mask file (Example: mni_icbm152_t1_tal_nlin_sym_09a_mask.mnc)", 
             "value-key": "MODEL_MASK_FILE",
             "optional": false, 
             "type": "File",    
 	     "command-line-flag" : "--model-mask",
             "id": "model_mask_file",    
             "name": "Model mask file"
        }, 
        {
            "description": "Currently it is a text file containing the paths to the files. Has to be edited to select multiple directories", 
            "value-key": "LIST_FILES", 
            "optional": false, 
            "type": "File", 
	    "command-line-flag" : "--list",
            "id": "list_files", 
            "name": "List of files"
        },
	{   
         "description": "Output Directory",
         "value-key": "OUTPUT",
         "optional": false,
         "type": "File", 
         "command-line-flag" : "-o",
         "id": "output_dir_name", 
         "name": "Output directory"
         }

    ], 
    "container-image": {
        "image": "laletscaria/build_average_model", 
        "type": "docker"
    }, 
    "schema-version": "0.5", 
    "output-files": [
        {
            "path-template": "OUTPUT", 
            "description": "The models are written into this directory.", 
            "optional": false, 
            "id": "results", 
            "name": "Results"
        }
    ], 
    "suggested-resources": {
        "walltime-estimate": 25200
    }, 
    "description": "Build Average Model pipeline"
}
